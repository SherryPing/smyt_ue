/* pages/infoFill/infoFill.wxss */
page {
  font-size: 24rpx;
  color: #3C3C3C;
}
.title-logo {
  margin: 40rpx 70rpx;
  padding-bottom: 30rpx;
  border-bottom: 4rpx dashed #D0D0D0;
}
.info {
  padding:0 40rpx;
  line-height: 36rpx;
}
.info>view {
  margin-bottom: 10rpx;
}
.bottom-part {
  padding:50rpx 40rpx 10rpx 40rpx;
}
.title {
  text-align: center;
}
.main-title {
  font-size: 28rpx;
}
.main-title view {
  position:relative;
  top:-6rpx;
  left:20rpx;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: 600;
}
.title-tip {
  color: #BF9955;
  font-size: 24rpx;
}
.fill-line {
  height: 80rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #D3D3D3;
}
.info-form {
  margin: 30rpx 0;
}
.fill-line image {
  position:relative;
  top:6rpx;
  left:10rpx;
}
