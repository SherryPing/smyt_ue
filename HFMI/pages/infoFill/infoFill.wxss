.img-view {
  display: inline-block;
  width: 70rpx;
}
.input-view {
  display: inline-block;
  width: calc(100% - 100rpx);
  height: 100%;
  line-height: 100%;
}
.input-view input {
  position:relative;
  /* top:10rpx; */
}
.line-q {
  height: 50rpx;
  line-height: 70rpx;
}
.line-a {
  height: 70rpx;
  line-height: 70rpx;
}
.radio-block {
  display: inline-block;
  width: 32%
}
.radio-block image {
  position: relative;
  top: 4rpx;
}
.radio-block text{
  margin-left: 10rpx;
}

/*  重写 checkbox 样式  */
checkbox .wx-checkbox-input{
   width: 24rpx;
   height: 24rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border-color: #22BFFF; 
   background: #22BFFF;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   width: 24rpx;
   height: 24rpx;
   line-height: 24rpx;
   text-align: center;
   font-size:20rpx;
   color:#fff;
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
checkbox-group,radio-group {
  display: flex;
}
checkbox-group label,radio-group label {
  flex: 1;
}



