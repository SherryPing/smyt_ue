.result-card {
  position: relative;
  /* width: 100%;  */
  height: 166rpx;
  border: 2rpx solid #eee;
  padding: 20rpx;
  margin: 20rpx 0;
}
.result-card .left-part {
  display: inline-block;
}
.result-card .date {
  position: absolute;
  top: 75rpx;
  left: 40rpx;
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 2rpx solid #fff;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}
.result-card .right-part {
  display: inline-block;
  width: calc(100% - 250rpx);
  font-size: 24rpx;
  color: #888888;
  padding-left: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
}
.result-card .right-part .title {
  color: #3C3C3C;
  font-size: 32rpx;
  height: 62rpx;
  line-height: 40rpx;
}
.result-card .right-part .bottom-date {
  text-align: right;
  height: 70rpx;
  line-height: 70rpx;
}
.result-card .right-part .con{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.ago-tip {
  text-align: center;
  color: #888888;
  margin: 40rpx 0;
}
.qr-code {
  padding: 0;
}
.qr-code image {
  vertical-align: bottom;
}
ec-canvas.tab-canvas {
  position: absolute;
  top: 80rpx;
  bottom: 0;
  left: 0;
  right: 0;
}
ec-canvas.no-tab {
  width: 100%;
  height: 100%;
}

