/* pages/report/report.wxss */
page{
  font-size: 24rpx;
}
.top-tab {
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
}
.top-tab>view {
  display: inline-block;
  text-align: center;
  height: 28rpx;
  line-height: 28rpx;
  width: 49%; 
}
.top-tab>view:first-child {
  border-right: 2rpx solid #eee;
}
.top-tab>view view{
  width: 120rpx;
  margin: 0 auto;
  height: 50rpx;
}
.top-tab>view view.active{
  color: #22BFFF;
  border-bottom: 4rpx solid #22BFFF;
}
.mon-view {
  background: #FBF9F5;
  padding: 0 20rpx;
}
.mon-view .title {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
}
.card {
  background: #fff;
  box-shadow: 0 0 2rpx 0 #5394FB;
  border-radius: 4rpx;
  padding: 24rpx 20rpx;
  overflow:hidden;
  margin-bottom: 20rpx;
}
.card>view {
  display: inline-block;
}
.card .left-part {
  width: 200rpx;
  /* padding: 20rpx 6rpx 20rpx 0;   */
  float:left;
  padding-top:40rpx;
}
.card .right-part {
  width: calc(100% - 230rpx);
  padding: 0 0 0 20rpx;
  border-left: 2rpx dashed #D0D0D0;
  float:left;
}
.per-line {
  height: 50rpx;
  line-height: 50rpx;
}
.per-line>view {
  display: inline-block;
}
.per-line .percent {
  height: 28rpx;
  width: 50%;
}
.per-line .percent>view {
  height: 28rpx;
}
.per-line>view:first-child {
  text-align: right;
  width: 33%;
  padding-right: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.per-line view:last-child {
  width: 12%;
  text-align: right;
}
