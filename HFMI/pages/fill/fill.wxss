/* pages/fill.wxss */
page {
 font-size: 24rpx;
 padding-bottom: 40rpx;
}
.top-tip {
  background: #FBF9F5;
  /* width: 100%; */
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  color: #BF9955;
}
.top-tip image {
  position: relative;
  top: 6rpx;
  margin-right: 20rpx;
}
.que_block {
  padding: 20rpx;
}
.que_block:nth-child(odd) {
  background: #F7FAFF;
}
.que_block .que, .ans view{
  min-height: 50rpx;
  line-height: 50rpx;
}
.ans view image {
  position: relative;
  top: 6rpx;
}
.ans view text {
  margin-left: 10rpx;
}
.modal {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.60);
  text-align: center;
}
.modal image { 
  margin-top: 30%;
}
radio-group label {
  display: block;
}